{
  "compilerOptions": {
    "target":                      "es2020",
    "strict":                       true,
    "module":                      "es2020",
    "lib":                        ["dom", "es2020"],
    "moduleResolution":            "node",
    "downlevelIteration":           true,
    "incremental":                  true,
    "sourceMap":                    true,
    "resolveJsonModule":            true,
    "allowSyntheticDefaultImports": true
  }
}
