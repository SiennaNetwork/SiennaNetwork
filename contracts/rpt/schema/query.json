{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Query",
  "anyOf": [
    {
      "description": "Return error count and launch timestamp.",
      "type": "object",
      "required": [
        "status"
      ],
      "properties": {
        "status": {
          "type": "object"
        }
      }
    },
    {
      "description": "Return schedule and sum of total minted tokens",
      "type": "object",
      "required": [
        "get_schedule"
      ],
      "properties": {
        "get_schedule": {
          "type": "object"
        }
      }
    },
    {
      "description": "Return one account from the schedule",
      "type": "object",
      "required": [
        "get_account"
      ],
      "properties": {
        "get_account": {
          "type": "object",
          "required": [
            "account_name",
            "pool_name"
          ],
          "properties": {
            "account_name": {
              "type": "string"
            },
            "pool_name": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "description": "Return amount that can be claimed by the specified address at the specified time",
      "type": "object",
      "required": [
        "claimable"
      ],
      "properties": {
        "claimable": {
          "type": "object",
          "required": [
            "address",
            "time"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            },
            "time": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "HumanAddr": {
      "type": "string"
    }
  }
}
