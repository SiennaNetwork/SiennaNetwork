{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Query",
  "anyOf": [
    {
      "description": "Return error count and launch timestamp.",
      "type": "object",
      "required": [
        "status"
      ],
      "properties": {
        "status": {
          "type": "object"
        }
      }
    },
    {
      "description": "Return schedule",
      "type": "object",
      "required": [
        "schedule"
      ],
      "properties": {
        "schedule": {
          "type": "object"
        }
      }
    },
    {
      "description": "Return the allocated portion size of an account (used by RPT to validate its configuration)",
      "type": "object",
      "required": [
        "portion"
      ],
      "properties": {
        "portion": {
          "type": "object",
          "required": [
            "account_name",
            "pool_name"
          ],
          "properties": {
            "account_name": {
              "type": "string"
            },
            "pool_name": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "description": "Return amount that can be claimed by the specified address at the specified time",
      "type": "object",
      "required": [
        "progress"
      ],
      "properties": {
        "progress": {
          "type": "object",
          "required": [
            "address",
            "time"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            },
            "time": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "HumanAddr": {
      "type": "string"
    }
  }
}
