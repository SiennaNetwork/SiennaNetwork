{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "anyOf": [
    {
      "type": "string",
      "enum": [
        "status",
        "launchpad_info"
      ]
    },
    {
      "type": "object",
      "required": [
        "admin"
      ],
      "properties": {
        "admin": {
          "$ref": "#/definitions/AdminQueryMsg"
        }
      }
    },
    {
      "description": "Get information about the users account",
      "type": "object",
      "required": [
        "user_info"
      ],
      "properties": {
        "user_info": {
          "type": "object",
          "required": [
            "address",
            "key"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            },
            "key": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "description": "Get a list of addresses that are drawm as potential participants in an IDO",
      "type": "object",
      "required": [
        "draw"
      ],
      "properties": {
        "draw": {
          "type": "object",
          "required": [
            "number",
            "timestamp",
            "tokens"
          ],
          "properties": {
            "number": {
              "type": "integer",
              "format": "uint32",
              "minimum": 0.0
            },
            "timestamp": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            },
            "tokens": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/definitions/HumanAddr"
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "AdminQueryMsg": {
      "type": "string",
      "enum": [
        "admin"
      ]
    },
    "HumanAddr": {
      "type": "string"
    }
  }
}
