{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InitMsg",
  "type": "object",
  "required": [
    "admin",
    "callback",
    "entropy",
    "info",
    "prng_seed"
  ],
  "properties": {
    "admin": {
      "description": "Should be the address of the original sender, since this is initiated by the factory.",
      "allOf": [
        {
          "$ref": "#/definitions/HumanAddr"
        }
      ]
    },
    "callback": {
      "description": "Used by the IDO to register itself with the factory.",
      "allOf": [
        {
          "$ref": "#/definitions/Callback_for_HumanAddr"
        }
      ]
    },
    "entropy": {
      "$ref": "#/definitions/Binary"
    },
    "info": {
      "$ref": "#/definitions/TokenSaleConfig"
    },
    "launchpad": {
      "description": "Used by the IDO to fill the whitelist spots with random pics",
      "anyOf": [
        {
          "$ref": "#/definitions/WhitelistRequest"
        },
        {
          "type": "null"
        }
      ]
    },
    "prng_seed": {
      "description": "Seed for creating viewkey",
      "allOf": [
        {
          "$ref": "#/definitions/Binary"
        }
      ]
    }
  },
  "definitions": {
    "Binary": {
      "description": "Binary is a wrapper around Vec<u8> to add base64 de/serialization with serde. It also adds some helper methods to help encode inline.\n\nThis is only needed as serde-json-{core,wasm} has a horrible encoding for Vec<u8>",
      "type": "string"
    },
    "Callback_for_HumanAddr": {
      "description": "Info needed to have the other contract respond.",
      "type": "object",
      "required": [
        "contract",
        "msg"
      ],
      "properties": {
        "contract": {
          "description": "Info about the contract requesting the callback.",
          "allOf": [
            {
              "$ref": "#/definitions/ContractLink_for_HumanAddr"
            }
          ]
        },
        "msg": {
          "description": "The message to call.",
          "allOf": [
            {
              "$ref": "#/definitions/Binary"
            }
          ]
        }
      }
    },
    "ContractLink_for_HumanAddr": {
      "description": "Info needed to talk to a contract instance.",
      "type": "object",
      "required": [
        "address",
        "code_hash"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "code_hash": {
          "type": "string"
        }
      }
    },
    "HumanAddr": {
      "type": "string"
    },
    "SaleType": {
      "type": "string",
      "enum": [
        "PreLockAndSwap",
        "PreLockOnly",
        "SwapOnly"
      ]
    },
    "TokenSaleConfig": {
      "type": "object",
      "required": [
        "input_token",
        "max_allocation",
        "max_seats",
        "min_allocation",
        "rate",
        "sold_token",
        "whitelist"
      ],
      "properties": {
        "input_token": {
          "description": "The token that will be used to buy the SNIP20.",
          "allOf": [
            {
              "$ref": "#/definitions/TokenType_for_HumanAddr"
            }
          ]
        },
        "max_allocation": {
          "description": "The total amount that each participant is allowed to buy.",
          "allOf": [
            {
              "$ref": "#/definitions/Uint128"
            }
          ]
        },
        "max_seats": {
          "description": "The maximum number of participants allowed.",
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        },
        "min_allocation": {
          "description": "The minimum amount that each participant is allowed to buy.",
          "allOf": [
            {
              "$ref": "#/definitions/Uint128"
            }
          ]
        },
        "rate": {
          "description": "The price for a single token.",
          "allOf": [
            {
              "$ref": "#/definitions/Uint128"
            }
          ]
        },
        "sale_type": {
          "description": "Sale type settings",
          "anyOf": [
            {
              "$ref": "#/definitions/SaleType"
            },
            {
              "type": "null"
            }
          ]
        },
        "sold_token": {
          "$ref": "#/definitions/ContractLink_for_HumanAddr"
        },
        "whitelist": {
          "description": "The addresses that are eligible to participate in the sale.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/HumanAddr"
          }
        }
      }
    },
    "TokenType_for_HumanAddr": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "custom_token"
          ],
          "properties": {
            "custom_token": {
              "type": "object",
              "required": [
                "contract_addr",
                "token_code_hash"
              ],
              "properties": {
                "contract_addr": {
                  "$ref": "#/definitions/HumanAddr"
                },
                "token_code_hash": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "native_token"
          ],
          "properties": {
            "native_token": {
              "type": "object",
              "required": [
                "denom"
              ],
              "properties": {
                "denom": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
    },
    "Uint128": {
      "type": "string"
    },
    "WhitelistRequest": {
      "type": "object",
      "required": [
        "launchpad",
        "tokens"
      ],
      "properties": {
        "launchpad": {
          "description": "Launchpad contract instance information",
          "allOf": [
            {
              "$ref": "#/definitions/ContractLink_for_HumanAddr"
            }
          ]
        },
        "tokens": {
          "description": "Vector of tokens address needs to have locked in order to be considered for a draw. Tokens need to be configured in the Launchpad as eligible. Option<> is because if None that will represent a native token.",
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/HumanAddr"
              },
              {
                "type": "null"
              }
            ]
          }
        }
      }
    }
  }
}
