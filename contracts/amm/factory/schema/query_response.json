{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryResponse",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "get_exchange_address"
      ],
      "properties": {
        "get_exchange_address": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "get_launchpad_address"
      ],
      "properties": {
        "get_launchpad_address": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "list_idos"
      ],
      "properties": {
        "list_idos": {
          "type": "object",
          "required": [
            "idos"
          ],
          "properties": {
            "idos": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/HumanAddr"
              }
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "list_exchanges"
      ],
      "properties": {
        "list_exchanges": {
          "type": "object",
          "required": [
            "exchanges"
          ],
          "properties": {
            "exchanges": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Exchange"
              }
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "get_exchange_settings"
      ],
      "properties": {
        "get_exchange_settings": {
          "type": "object",
          "required": [
            "settings"
          ],
          "properties": {
            "settings": {
              "$ref": "#/definitions/ExchangeSettings"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object",
          "required": [
            "exchange_settings",
            "ido_contract",
            "launchpad_contract",
            "lp_token_contract",
            "pair_contract",
            "snip20_contract"
          ],
          "properties": {
            "exchange_settings": {
              "$ref": "#/definitions/ExchangeSettings"
            },
            "ido_contract": {
              "$ref": "#/definitions/ContractInstantiationInfo"
            },
            "launchpad_contract": {
              "$ref": "#/definitions/ContractInstantiationInfo"
            },
            "lp_token_contract": {
              "$ref": "#/definitions/ContractInstantiationInfo"
            },
            "pair_contract": {
              "$ref": "#/definitions/ContractInstantiationInfo"
            },
            "snip20_contract": {
              "$ref": "#/definitions/ContractInstantiationInfo"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "ContractInstantiationInfo": {
      "description": "Info needed to instantiate a contract.",
      "type": "object",
      "required": [
        "code_hash",
        "id"
      ],
      "properties": {
        "code_hash": {
          "type": "string"
        },
        "id": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      },
      "additionalProperties": false
    },
    "ContractLink": {
      "description": "Info needed to talk to a contract instance.",
      "type": "object",
      "required": [
        "address",
        "code_hash"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "code_hash": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "ExchangeSettings": {
      "type": "object",
      "required": [
        "sienna_fee",
        "swap_fee"
      ],
      "properties": {
        "sienna_burner": {
          "anyOf": [
            {
              "$ref": "#/definitions/HumanAddr"
            },
            {
              "type": "null"
            }
          ]
        },
        "sienna_fee": {
          "$ref": "#/definitions/Fee"
        },
        "swap_fee": {
          "$ref": "#/definitions/Fee"
        }
      }
    },
    "Exchange": {
      "description": "Represents the address of an exchange and the pair that it manages",
      "type": "object",
      "required": [
        "contract",
        "pair"
      ],
      "properties": {
        "contract": {
          "description": "The contract that manages the exchange.",
          "allOf": [
            {
              "$ref": "#/definitions/ContractLink"
            }
          ]
        },
        "pair": {
          "description": "The pair that the contract manages.",
          "allOf": [
            {
              "$ref": "#/definitions/TokenPair"
            }
          ]
        }
      }
    },
    "Fee": {
      "type": "object",
      "required": [
        "denom",
        "nom"
      ],
      "properties": {
        "denom": {
          "type": "integer",
          "format": "uint16",
          "minimum": 0.0
        },
        "nom": {
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        }
      }
    },
    "HumanAddr": {
      "type": "string"
    },
    "TokenPair": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/TokenType"
        },
        {
          "$ref": "#/definitions/TokenType"
        }
      ],
      "maxItems": 2,
      "minItems": 2
    },
    "TokenType": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "custom_token"
          ],
          "properties": {
            "custom_token": {
              "type": "object",
              "required": [
                "contract_addr",
                "token_code_hash"
              ],
              "properties": {
                "contract_addr": {
                  "$ref": "#/definitions/HumanAddr"
                },
                "token_code_hash": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "native_token"
          ],
          "properties": {
            "native_token": {
              "type": "object",
              "required": [
                "denom"
              ],
              "properties": {
                "denom": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
    }
  }
}
