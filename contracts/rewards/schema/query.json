{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Query",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "auth"
      ],
      "properties": {
        "auth": {
          "$ref": "#/definitions/AuthQuery"
        }
      }
    },
    {
      "type": "object",
      "required": [
        "rewards"
      ],
      "properties": {
        "rewards": {
          "$ref": "#/definitions/RewardsQuery"
        }
      }
    },
    {
      "description": "For Keplr integration",
      "type": "object",
      "required": [
        "token_info"
      ],
      "properties": {
        "token_info": {
          "type": "object"
        }
      }
    },
    {
      "description": "For Keplr integration",
      "type": "object",
      "required": [
        "balance"
      ],
      "properties": {
        "balance": {
          "type": "object",
          "required": [
            "address",
            "key"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            },
            "key": {
              "type": "string"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "AuthQuery": {
      "type": "string",
      "enum": [
        "admin"
      ]
    },
    "HumanAddr": {
      "type": "string"
    },
    "RewardsQuery": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "user_info"
          ],
          "properties": {
            "user_info": {
              "type": "object",
              "required": [
                "address",
                "at",
                "key"
              ],
              "properties": {
                "address": {
                  "$ref": "#/definitions/HumanAddr"
                },
                "at": {
                  "type": "integer",
                  "format": "uint64",
                  "minimum": 0.0
                },
                "key": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "pool_info"
          ],
          "properties": {
            "pool_info": {
              "type": "object",
              "required": [
                "at"
              ],
              "properties": {
                "at": {
                  "type": "integer",
                  "format": "uint64",
                  "minimum": 0.0
                }
              }
            }
          }
        }
      ]
    }
  }
}
