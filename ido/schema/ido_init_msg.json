{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IdoInitMsg",
  "type": "object",
  "required": [
    "callback",
    "info",
    "snip20_contract"
  ],
  "properties": {
    "callback": {
      "description": "Used by the IDO to register itself with the factory.",
      "allOf": [
        {
          "$ref": "#/definitions/Callback"
        }
      ]
    },
    "info": {
      "$ref": "#/definitions/IdoInitConfig"
    },
    "snip20_contract": {
      "$ref": "#/definitions/ContractInstantiationInfo"
    }
  },
  "definitions": {
    "Binary": {
      "description": "Binary is a wrapper around Vec<u8> to add base64 de/serialization with serde. It also adds some helper methods to help encode inline.\n\nThis is only needed as serde-json-{core,wasm} has a horrible encoding for Vec<u8>",
      "type": "string"
    },
    "Callback": {
      "description": "Used to ask a contract to send back a message.",
      "type": "object",
      "required": [
        "contract",
        "msg"
      ],
      "properties": {
        "contract": {
          "description": "Info about the contract requesting the callback.",
          "allOf": [
            {
              "$ref": "#/definitions/ContractInfo"
            }
          ]
        },
        "msg": {
          "description": "The message to call.",
          "allOf": [
            {
              "$ref": "#/definitions/Binary"
            }
          ]
        }
      }
    },
    "ContractInfo": {
      "description": "Code hash and address of a contract.",
      "type": "object",
      "required": [
        "address",
        "code_hash"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "code_hash": {
          "type": "string"
        }
      }
    },
    "ContractInstantiationInfo": {
      "description": "Info used to instantiate a contract",
      "type": "object",
      "required": [
        "code_hash",
        "id"
      ],
      "properties": {
        "code_hash": {
          "type": "string"
        },
        "id": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "HumanAddr": {
      "type": "string"
    },
    "IdoInitConfig": {
      "type": "object",
      "required": [
        "input_token",
        "rate",
        "snip20_init_info"
      ],
      "properties": {
        "input_token": {
          "description": "The token that will be used to buy the instantiated SNIP20",
          "allOf": [
            {
              "$ref": "#/definitions/TokenType"
            }
          ]
        },
        "rate": {
          "$ref": "#/definitions/Uint128"
        },
        "snip20_init_info": {
          "$ref": "#/definitions/Snip20TokenInitInfo"
        }
      }
    },
    "Snip20InitConfig": {
      "description": "This type represents optional configuration values which can be overridden. All values are optional and have defaults which are more private by default, but can be overridden if necessary",
      "type": "object",
      "properties": {
        "public_total_supply": {
          "description": "Indicates whether the total supply is public or should be kept secret. default: False",
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "Snip20TokenInitInfo": {
      "description": "Used to provide only the essential info to an IDO that instantiates a snip20 token",
      "type": "object",
      "required": [
        "decimals",
        "name",
        "prng_seed",
        "symbol"
      ],
      "properties": {
        "config": {
          "anyOf": [
            {
              "$ref": "#/definitions/Snip20InitConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "decimals": {
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        },
        "name": {
          "type": "string"
        },
        "prng_seed": {
          "$ref": "#/definitions/Binary"
        },
        "symbol": {
          "type": "string"
        }
      }
    },
    "TokenType": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "custom_token"
          ],
          "properties": {
            "custom_token": {
              "type": "object",
              "required": [
                "contract_addr",
                "token_code_hash"
              ],
              "properties": {
                "contract_addr": {
                  "$ref": "#/definitions/HumanAddr"
                },
                "token_code_hash": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "native_token"
          ],
          "properties": {
            "native_token": {
              "type": "object",
              "required": [
                "denom"
              ],
              "properties": {
                "denom": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
    },
    "Uint128": {
      "type": "string"
    }
  }
}
