{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Init",
  "type": "object",
  "required": [
    "token_addr",
    "token_hash"
  ],
  "properties": {
    "schedule": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/definitions/Portion"
      }
    },
    "token_addr": {
      "$ref": "#/definitions/HumanAddr"
    },
    "token_hash": {
      "type": "string"
    }
  },
  "definitions": {
    "HumanAddr": {
      "type": "string"
    },
    "Portion": {
      "description": "Claimable portion",
      "type": "object",
      "required": [
        "address",
        "amount",
        "reason",
        "vested"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "amount": {
          "$ref": "#/definitions/Uint128"
        },
        "reason": {
          "type": "string"
        },
        "vested": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "Uint128": {
      "type": "string"
    }
  }
}
