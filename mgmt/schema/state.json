{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "State",
  "type": "object",
  "required": [
    "errors",
    "history",
    "schedule",
    "token_addr",
    "token_hash",
    "total"
  ],
  "properties": {
    "admin": {
      "description": "The instantiatior of the contract.",
      "anyOf": [
        {
          "$ref": "#/definitions/HumanAddr"
        },
        {
          "type": "null"
        }
      ]
    },
    "errors": {
      "description": "TODO: public counter of invalid requests",
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "history": {
      "description": "History of fulfilled claims.",
      "allOf": [
        {
          "$ref": "#/definitions/History"
        }
      ]
    },
    "launched": {
      "description": "When this contract is launched, this is set to the block time.",
      "type": [
        "integer",
        "null"
      ],
      "format": "uint64",
      "minimum": 0.0
    },
    "schedule": {
      "description": "Vesting configuration.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Portion"
      }
    },
    "token_addr": {
      "description": "The SNIP20 token contract that will be managed by this instance.",
      "allOf": [
        {
          "$ref": "#/definitions/HumanAddr"
        }
      ]
    },
    "token_hash": {
      "description": "The code hash of the managed contract (see `secretcli query compute contract-hash --help`).",
      "type": "string"
    },
    "total": {
      "description": "Total amount to mint",
      "allOf": [
        {
          "$ref": "#/definitions/Uint128"
        }
      ]
    }
  },
  "definitions": {
    "ClaimedPortion": {
      "description": "History entry",
      "type": "object",
      "required": [
        "claimed",
        "portion"
      ],
      "properties": {
        "claimed": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "portion": {
          "$ref": "#/definitions/Portion"
        }
      }
    },
    "History": {
      "description": "Log of executed claims",
      "type": "object",
      "required": [
        "history"
      ],
      "properties": {
        "history": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ClaimedPortion"
          }
        }
      }
    },
    "HumanAddr": {
      "type": "string"
    },
    "Portion": {
      "description": "Claimable portion",
      "type": "object",
      "required": [
        "address",
        "amount",
        "reason",
        "vested"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "amount": {
          "$ref": "#/definitions/Uint128"
        },
        "reason": {
          "type": "string"
        },
        "vested": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "Uint128": {
      "type": "string"
    }
  }
}
