{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HandleMsg",
  "anyOf": [
    {
      "type": "string",
      "enum": [
        "admin_status"
      ]
    },
    {
      "description": "Swap custom or native coin for selling coin",
      "type": "object",
      "required": [
        "swap"
      ],
      "properties": {
        "swap": {
          "type": "object",
          "required": [
            "amount"
          ],
          "properties": {
            "amount": {
              "$ref": "#/definitions/Uint128"
            }
          }
        }
      }
    },
    {
      "description": "Change admin handle",
      "type": "object",
      "required": [
        "admin"
      ],
      "properties": {
        "admin": {
          "$ref": "#/definitions/AdminHandleMsg"
        }
      }
    },
    {
      "description": "Ask for a refund after the sale is finished",
      "type": "object",
      "required": [
        "admin_refund"
      ],
      "properties": {
        "admin_refund": {
          "type": "object",
          "properties": {
            "address": {
              "anyOf": [
                {
                  "$ref": "#/definitions/HumanAddr"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    },
    {
      "description": "Admin can claim profits from sale after the sale finishes",
      "type": "object",
      "required": [
        "admin_claim"
      ],
      "properties": {
        "admin_claim": {
          "type": "object",
          "properties": {
            "address": {
              "anyOf": [
                {
                  "$ref": "#/definitions/HumanAddr"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    },
    {
      "description": "Add new address to whitelist",
      "type": "object",
      "required": [
        "admin_add_address"
      ],
      "properties": {
        "admin_add_address": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "AdminHandleMsg": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "change_admin"
          ],
          "properties": {
            "change_admin": {
              "type": "object",
              "required": [
                "address"
              ],
              "properties": {
                "address": {
                  "$ref": "#/definitions/HumanAddr"
                }
              }
            }
          }
        }
      ]
    },
    "HumanAddr": {
      "type": "string"
    },
    "Uint128": {
      "type": "string"
    }
  }
}
