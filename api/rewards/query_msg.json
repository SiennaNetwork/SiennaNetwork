{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "anyOf": [
    {
      "type": "string",
      "enum": [
        "pool",
        "total_rewards_supply"
      ]
    },
    {
      "type": "object",
      "required": [
        "claim_simulation"
      ],
      "properties": {
        "claim_simulation": {
          "type": "object",
          "required": [
            "address",
            "current_time",
            "viewing_key"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            },
            "current_time": {
              "description": "Unix time in seconds.",
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            },
            "viewing_key": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "account"
      ],
      "properties": {
        "account": {
          "type": "object",
          "required": [
            "address",
            "viewing_key"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            },
            "viewing_key": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "admin"
      ],
      "properties": {
        "admin": {
          "$ref": "#/definitions/AdminQueryMsg"
        }
      }
    },
    {
      "description": "Copy of SNIP20 message for Keplr support",
      "type": "object",
      "required": [
        "token_info"
      ],
      "properties": {
        "token_info": {
          "type": "object"
        }
      }
    },
    {
      "description": "This is only here because of Keplr",
      "type": "object",
      "required": [
        "balance"
      ],
      "properties": {
        "balance": {
          "type": "object",
          "required": [
            "address",
            "key"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            },
            "key": {
              "type": "string"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "AdminQueryMsg": {
      "type": "string",
      "enum": [
        "admin"
      ]
    },
    "HumanAddr": {
      "type": "string"
    }
  }
}
