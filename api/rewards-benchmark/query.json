{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Query",
  "anyOf": [
    {
      "description": "Overall pool status",
      "type": "object",
      "required": [
        "pool_info"
      ],
      "properties": {
        "pool_info": {
          "type": "object",
          "required": [
            "now"
          ],
          "properties": {
            "now": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      }
    },
    {
      "description": "Requires the user's viewing key.",
      "type": "object",
      "required": [
        "user_info"
      ],
      "properties": {
        "user_info": {
          "type": "object",
          "required": [
            "address",
            "key",
            "now"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            },
            "key": {
              "type": "string"
            },
            "now": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      }
    },
    {
      "description": "Keplr integration",
      "type": "object",
      "required": [
        "token_info"
      ],
      "properties": {
        "token_info": {
          "type": "object"
        }
      }
    },
    {
      "description": "Keplr integration",
      "type": "object",
      "required": [
        "balance"
      ],
      "properties": {
        "balance": {
          "type": "object",
          "required": [
            "address",
            "key"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            },
            "key": {
              "type": "string"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "HumanAddr": {
      "type": "string"
    }
  }
}
