{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InitMsg",
  "type": "object",
  "required": [
    "exchange_settings",
    "ido_contract",
    "lp_token_contract",
    "pair_contract",
    "snip20_contract"
  ],
  "properties": {
    "exchange_settings": {
      "$ref": "#/definitions/ExchangeSettings"
    },
    "ido_contract": {
      "$ref": "#/definitions/ContractInstantiationInfo"
    },
    "lp_token_contract": {
      "$ref": "#/definitions/ContractInstantiationInfo"
    },
    "pair_contract": {
      "$ref": "#/definitions/ContractInstantiationInfo"
    },
    "snip20_contract": {
      "$ref": "#/definitions/ContractInstantiationInfo"
    }
  },
  "definitions": {
    "ContractInfo": {
      "description": "Code hash and address of a contract.",
      "type": "object",
      "required": [
        "address",
        "code_hash"
      ],
      "properties": {
        "address": {
          "$ref": "#/definitions/HumanAddr"
        },
        "code_hash": {
          "type": "string"
        }
      }
    },
    "ContractInstantiationInfo": {
      "description": "Info used to instantiate a contract",
      "type": "object",
      "required": [
        "code_hash",
        "id"
      ],
      "properties": {
        "code_hash": {
          "type": "string"
        },
        "id": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "ExchangeSettings": {
      "type": "object",
      "required": [
        "sienna_fee",
        "swap_fee"
      ],
      "properties": {
        "sienna_burner": {
          "anyOf": [
            {
              "$ref": "#/definitions/ContractInfo"
            },
            {
              "type": "null"
            }
          ]
        },
        "sienna_fee": {
          "$ref": "#/definitions/Fee"
        },
        "swap_fee": {
          "$ref": "#/definitions/Fee"
        }
      }
    },
    "Fee": {
      "type": "object",
      "required": [
        "denom",
        "nom"
      ],
      "properties": {
        "denom": {
          "type": "integer",
          "format": "uint16",
          "minimum": 0.0
        },
        "nom": {
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        }
      }
    },
    "HumanAddr": {
      "type": "string"
    }
  }
}
