{
  "name":     "@sienna/sienna",
  "version":  "0.0.0",
  "type":     "module",
  "private":   true,
  "workspace": true,

  "packages": [
    "./deps/*",

    "./scripts",
    "./settings",

    "./contracts/tge",
    "./contracts/tge/*",
    "./libraries/schedule",

    "./contracts/amm",
    "./contracts/amm/*",
    "./libraries/ops-amm",

    "./contracts/lend",
    "./contracts/lend/*",

    "./frontends/*"
  ],

  "dependencies": {
    "@hackbg/fadroma": "workspace:./deps/fadroma",
    "@hackbg/ganesha": "^1",
    "typescript":      "^4.4.4"
  },

  "scripts": {
    "dev": "ganesha-node --unhandled-rejections=strict scripts/Dev.ts.md",
    "ops": "ganesha-node --unhandled-rejections=strict scripts/Ops.ts.md",

    "dash":         "cd frontends/dashboard; pnpm web",
    "dash:build":   "frontends/dashboard/build.sh",
    "test:rewards": "cargo test -p sienna-rewards"
  }

}
