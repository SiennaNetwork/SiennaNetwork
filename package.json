{
  "name": "@sienna/sienna",
  "version": "0.0.0",
  "private": true,
  "workspace": true,
  "type": "module",
  "packages": [
    "./benchmarks",
    "./contracts/*",
    "./frontends/*",
    "./libraries/fadroma-next/crates/fadroma-snip20-impl",
    "./libraries/fadroma-next/packages/*",
    "./libraries/fadroma-next/deps/*",
    "./libraries/ops-amm",
    "./libraries/schedule",
    "./scripts",
    "./settings"
  ],
  "dependencies": {
    "@ganesha/node": "workspace:*",
    "@hackbg/tools": "workspace:*",
    "typescript":    "^4.4.4"
  },
  "scripts": {
    "dev":          "ganesha-node --unhandled-rejections=strict scripts/dev.ts",
    "ops":          "ganesha-node --unhandled-rejections=strict scripts/ops.ts",
    "dash":         "cd frontends/dashboard; pnpm web",
    "dash:build":   "frontends/dashboard/build.sh",
    "test:rewards": "cargo test -p sienna-rewards"
  }
}
