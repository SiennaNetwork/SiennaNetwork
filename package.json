{
  "name": "@sienna/sienna",
  "version": "0.0.0",
  "private": true,
  "workspace": true,
  "type": "module",
  "packages": [
    "./benchmarks",
    "./contracts/*",
    "./frontends/*",
    "./libraries/fadroma-next/lib/composable-snip20",
    "./libraries/fadroma-next/packages/*",
    "./libraries/fadroma-next/platforms/scrt-1.0/cosmwasm-js/packages/sdk",
    "./libraries/fadroma-next/platforms/scrt-1.2/cosmwasm-js/packages/sdk",
    "./libraries/ops-amm",
    "./libraries/schedule",
    "./scripts",
    "./settings"
  ],
  "dependencies": {
    "@ganesha/node": "workspace:*",
    "chai":          "^4.3.4",
    "mocha":         "^8.4.0",
    "typescript":    "^4.4.4"
  },
  "scripts": {
    "dev":          "ganesha-node --unhandled-rejections=strict scripts/dev.ts",
    "ops":          "ganesha-node --unhandled-rejections=strict scripts/ops.ts",
    "dash":         "cd frontends/dashboard; pnpm web",
    "dash:build":   "frontends/dashboard/build.sh",
    "test:rewards": "cargo test -p sienna-rewards"
  }
}
