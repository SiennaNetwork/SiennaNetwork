{
  "name": "@sienna/sienna",
  "version": "0.0.0",
  "private": true,
  "workspace": true,
  "type": "module",
  "packages": [
    "./benchmarks",
    "./contracts/*",
    "./dashboard",
    "./libraries/api",
    "./libraries/fadroma-next/lib/composable-snip20",
    "./libraries/fadroma-next/ops",
    "./libraries/fadroma-next/ops-scrt",
    "./libraries/fadroma-next/ops-scrt-1.0",
    "./libraries/fadroma-next/ops-scrt-1.2",
    "./libraries/fadroma-next/platforms/ganesha",
    "./libraries/fadroma-next/platforms/scrt-1.0/cosmwasm-js/packages/sdk",
    "./libraries/fadroma-next/platforms/scrt-1.2/cosmwasm-js/packages/sdk",
    "./libraries/fadroma-next/tools",
    "./libraries/ops-amm",
    "./libraries/schedule",
    "./libraries/siennajs",
    "./scripts",
    "./settings"
  ],
  "dependencies": {
    "@fadroma/ops":      "workspace:*",
    "@fadroma/scrt":     "workspace:*",
    "@fadroma/scrt-1.0": "workspace:*",
    "@fadroma/scrt-1.2": "workspace:*",
    "@fadroma/tools":    "workspace:*",
    "@hackbg/ganesha":   "workspace:*",
    "chai": "^4.3.4",
    "mocha": "^8.4.0",
    "source-map-support": "^0.5.20",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "dev": "ganesha run-module --unhandled-rejections=strict scripts/dev.ts",
    "ops": "ganesha run-module --unhandled-rejections=strict scripts/ops.ts",
    "dash": "cd dashboard; pnpm web",
    "dash:build": "dashboard/build.sh",
    "test:rewards": "cargo test -p sienna-rewards"
  }
}
